<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".TermsAndConditions">

    <TextView
            android:text="Please accept the terms and conditions below"
            android:layout_width="384dp"
            android:layout_height="26dp"
            android:id="@+id/termsAndConditionsHeading"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.061" />

    <TextView
            android:text="Terms and conditions"
            android:layout_width="328dp"
            android:layout_height="381dp"
            android:id="@+id/termsAndConditions"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/termsAndConditionsHeading"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.075" />

    <Button
            android:text="Accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acceptButton"
            android:backgroundTint="@color/accept_green"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.911"
            app:layout_constraintVertical_bias="0.85" />

    <Button
            android:text="Decline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/declineButton"
            android:backgroundTint="@color/gray"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.085"
            app:layout_constraintVertical_bias="0.85" />
</androidx.constraintlayout.widget.ConstraintLayout>